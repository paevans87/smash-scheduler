<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#2ECC71</Color>
    <Color x:Key="PrimaryDark">#27AE60</Color>
    <Color x:Key="PrimaryDarker">#229954</Color>

    <Color x:Key="Accent">#3498DB</Color>
    <Color x:Key="AccentDark">#2980B9</Color>
    <Color x:Key="AccentDarker">#2471A3</Color>

    <Color x:Key="Success">#27AE60</Color>
    <Color x:Key="Warning">#F39C12</Color>
    <Color x:Key="Error">#E74C3C</Color>
    <Color x:Key="Info">#3498DB</Color>

    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="Background">#F8F9FA</Color>

    <Color x:Key="TextPrimary">#2C3E50</Color>
    <Color x:Key="TextSecondary">#7F8C8D</Color>
    <Color x:Key="TextTertiary">#BDC3C7</Color>
    <Color x:Key="TextInverse">#FFFFFF</Color>

    <Color x:Key="BorderDefault">#E8ECEF</Color>
    <Color x:Key="BorderFocus">#3498DB</Color>
    <Color x:Key="BorderError">#E74C3C</Color>

</ResourceDictionary>
